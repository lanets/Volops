<% content_for :top_content do %>
<div class="row">
  <h1 class="col-md-6"> Create a new event </h1>
</div>


<%= render 'shared/errors', object: @event %>

<%= form_for @event do |f| %>
  <div class="form-group col-md-6">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, class: 'form-control', required: true %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :end_date%>
    <%= f.date_field :end_date, class: 'form-control', required: true%>
  </div>
  <div class="col-md-6">
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <%= link_to "Back", :back,  class: "btn btn-outline-danger"  %>
  </div>

<% end %>

<% end %>
