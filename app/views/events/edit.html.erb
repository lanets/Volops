<% content_for :top_content do %>
<div class="row">
  <h1>Edit <%= @event.title %></h1>

  <%= render 'shared/errors', object: @event %>


  <%= form_for @event do |f| %>
    <div class="form-group col-md-6">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :end_date%>
      <%= f.date_field :end_date, class: 'form-control', required: true%>
    </div>
    <div class="col-md-6">
      <%= f.submit "Update", class: 'btn btn-primary' %>
      <%= link_to "Back to events listing", events_path, class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>
<% end %>
