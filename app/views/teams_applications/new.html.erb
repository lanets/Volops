<% content_for :top_content do %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Application to Teams</h2>
      </div>

      <hr>

      <div class="panel-body">

        <%= render 'shared/errors', object: @teams_application %>

        <%= form_with model: [@event, @teams_application] do |t| %>
          <div class="form-group col-md-6">
            <%= t.label :team %>
            <%= collection_select(:teams_application, :team_id, Team.where(event_id: @event.id), :id, :title, {:prompt=> true},  {class: 'form-control'}) %>
          </div>
          <div class="form-group col-md-6">
            <%= t.label :priority %>
            <%= t.select(:priority, [1, 2, 3]) %>
          </div>
          <div class="col-md-6">
            <%= t.submit "Apply", class: 'btn btn-primary' %>
            <%= link_to 'Return to Team', event_teams_path(event_id: @event), class: 'btn btn-outline-danger' %>
          </div>
        <% end %>
      </div>
    </div>
<% end %>