<% if object.errors.any? %>
  <div class="card">
    <div class='card-body'>
      <strong>
        <%= pluralize(object.errors.count, 'error') %> were found
      </strong>

      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>

<% end %>
