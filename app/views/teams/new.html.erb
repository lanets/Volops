<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>

<% content_for :top_content do %>
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Create new team</h2>
      </div>

      <br>
      <div class="panel-body">

        <%= render 'shared/errors', object: @team %>

        <%= form_for [@event, @team] do |t| %>
          <div class="form-group col-md-6">
            <%= t.label :title %>
            <%= t.text_field :title, class: 'form-control' %>
          </div>
          <div class="form-group col-md-6">
            <%= t.label :description %>
            <%= t.text_area :description, class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <%= t.submit "Create", class: 'btn btn-primary' %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>
