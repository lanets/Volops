<% content_for :top_content do %>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to @event.title, event_path(@event) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to 'Schedule Tools', admin_event_schedules_path(@event) %>
    </li>
    <li class="breadcrumb-item active">
      Edit
    </li>
  </ol>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Edit shift: <%= @schedule.shift.shift_name %></h2>
      <h4> <%= @schedule.team.title %> Team, position: <%= @schedule.position %></h4>
    </div>

    <br>

    <div class="card-body">
      <%= render 'shared/errors', object: @schedule %>

      <%= form_for [@event, @schedule] do |t| %>
        <div class="form-group">
          <%= t.label :user %>
          <%= collection_select(:schedule, :user, User.all, :id, :full_name, {prompt: true, required: true},  {class: 'form-control'}) %>
        </div>
        <div class="form-group">
          <%= t.label :comment %>
          <%= t.text_area :comment, class: 'form-control' %>
        </div>
        <div class="btn-group-justified">
          <%= t.submit "Update", class: 'btn btn-primary' %>
          <%= link_to "Back to Schedule tools ",admin_event_schedules_path(@event), class: "btn btn-outline-danger" %>
        </div>

      <% end %>
    </div>
  </div>
<% end %>
