<% content_for :top_content do %>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to @event.title, event_path(@event) %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to 'Schedule Tools'.html_safe, event_schedules_path(@event) %>
    </li>
    <li class="breadcrumb-item active">
      Generate Schedule
    </li>
  </ol>
  <div class="row">
    <div class="col-12">
      <div class="card mb-3">
        <div class="card-header">
          <h1><i class="fa fa-table"></i> Generate Schedule</h1>
        </div>
        <div class="card-body">
          <%= link_to 'Save', event_schedules_path(@schedule), :method => :post %>
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
              <tr>
                <th> Schedule # </th>
                <th> User Id</th>
                <th>Shift Id</th>
                <th>Job (team id + position)</th>
              </tr>
              </thead>
              <tbody>
              <% @schedule.each_with_index do |s, index| %>
                <tr>
                  <td> <%= index + 1 %> </td>
                  <td>
                  <% if s.user_id.present? %>
                    <%= s.user.full_name %>
                  <% end %>
                  </td>
                  <td><%= s.shift.shift_name %></td>
                  <td><%= s.team.title %> <%= s.position %> </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>